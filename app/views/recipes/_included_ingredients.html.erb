<% @recipe.recipe_ingredients.order(:id).each do |recipe_ingredient| %>
  <%= turbo_stream_from "recipe_ingredient_#{recipe_ingredient.id}" %>
  <%= turbo_frame_tag dom_id(recipe_ingredient), class: 'flex justify-between gap-2 w-full items-center py-1' do %>
    <%= render 'included_ingredient', recipe_ingredient: recipe_ingredient %>
  <% end %>
<% end %>