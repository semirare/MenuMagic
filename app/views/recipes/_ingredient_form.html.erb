<div class="flex justify-end gap-3 items-center" id="<%="recipe_ingredient_#{ingredient_form.object.id}"%>">
    <% quantities = ['1/4', '1/2', '3/4', '1', '2'] %>
    <%= ingredient_form.object.ingredient.name %>
    <%= ingredient_form.select :quantity, quantities.map { |fraction| [fraction, fraction_to_float(fraction)] },
    { selected: ingredient_form.object.quantity.to_s } %>
    <%= ingredient_form.collection_select :ingredient_unit_id , IngredientUnit.all, :id, :name %>
    <%= button_to recipe_ingredient_path(ingredient_form.object), method: :delete do %>
        <i class="fas fa-trash text-red-500"></i>
    <% end %>
</div>