<% quantities = [nil, '1/8', '1/4', '3/8', '1/2', '5/8', '3/4', '7/8', '1', '2', '3', '4', '5'] %>
<div class="flex justify-between gap-2 w-full items-center py-1" id="<%= dom_id(recipe_ingredient) %>">
    <p class="w-3/5 text-wrap break-normal overflow-hidden truncate"><%= recipe_ingredient.ingredient.name %></p>
    <div class="flex-grow-0 w-1/4">
        <%= form_with(model: recipe_ingredient, class: "flex justify-between gap-4") do |form| %>
            <%= form.select :quantity,  quantities, { selected: recipe_ingredient.quantity } %>
            <%= form.select :ingredient_unit, IngredientUnit.all.order(:type).order(:name)
                .map { |unit| [unit.name, unit.id]}, { selected: recipe_ingredient.ingredient_unit } %>
        <% end %>
    </div>
    <div class="flex-grow-0 w-1/10">
        <%= button_to recipe_ingredient_path(recipe_ingredient), method: :delete, data: { turbo: true },
            class: "" do %>
            <i class="fas fa-trash text-red-500"></i>
        <% end %>
    </div>
</div>