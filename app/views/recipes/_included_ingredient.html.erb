<div class="flex justify-between gap-4 w-full" id=<%= dom_id(recipe_ingredient) %>>
    <p class="w-1/4"><%= recipe_ingredient.ingredient.name %></p>
    <%= form_with(model: recipe_ingredient, class: "flex justify-between w-full gap-4") do |form| %>
        <%= form.text_field :quantity, value: recipe_ingredient.quantity %>
        <%= form.select :ingredient_unit, IngredientUnit.all.order(:type).order(:name)
            .map { |unit| [unit.name, unit.id]}, { selected: recipe_ingredient.ingredient_unit } %>
    <% end %>
    <%= button_to recipe_ingredient_path(recipe_ingredient), method: :delete, data: { turbo: true } do %>
        <i class="fas fa-trash text-red-500"></i>
    <% end %>
</div>