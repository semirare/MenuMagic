<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 flex items-center gap-2">
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full" %>
  </div>

  <div class="flex my-5 justify-between">
    <div class="flex flex-col">
      <% recipe.ingredients.each do |ingredient| %>
        <div class="flex justify-between gap-4">
          <p><%= ingredient.name %></p>
          <%= button_to ingredient_path(ingredient), method: :delete do %>
            <i class="fas fa-trash text-red-500"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="flex flex-col">
      <% @ingredients_not_in_recipe.each do |ingredient| %>
        <div class="flex justify-between gap-4">
          <p><%= ingredient.name %></p>
         <%= button_to recipe_ingredients_path(recipe_ingredient: {ingredient_id: ingredient.id, recipe_id: recipe.id}), method: :post do %>
            <i class="fas fa-plus text-green-500"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex gap-2">
    <%= form.submit class: "rounded-lg bg-blue-600 text-white p-2" %>
    <%= link_to "Back to Recipe List", recipes_path, class: "rounded-lg bg-blue-500 text-white p-2" %>
  </div>
<% end %>
