
<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-8">
    <div class="flex items-center gap-2">
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full" %>
      <%= form.submit "Save", class: "rounded-lg bg-blue-600 text-white p-2 min-w-32" %>
      <% if params[:action] == 'edit' %>
        <%= link_to "Delete", recipe_path(recipe), data: { turbo: true, turbo_method: :delete },
        class: "rounded-lg bg-red-500 text-white p-2 min-w-32 flex justify-center" %>
      <% end %>
    </div>
    <%= turbo_frame_tag "included_ingredients" do %>
      <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-2">
        <%= form.fields_for :recipe_ingredients do |ingredient_form| %>
          <%= render "ingredient_form", ingredient_form: %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
<h1 class="text-2xl font-bold text-center mt-8">Add Ingredients</h1>
<div class="flex gap-2" id="unused_ingredients">
  <% @ingredients_not_in_recipe.each do |ingredient| %>
    <%= render 'unused_ingredient', ingredient: ingredient, recipe_id: @recipe.id %>
  <% end %>
</div>